<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/CSS/perfil.css">
</head>
<body>
    <%- include('../partials/header'); %>
    
    <div class="perfil-container">
        <div class="perfil-header">
            <div class="perfil-avatar">
                <span id="avatarLetra"></span>
            </div>
            <div class="perfil-info">
                <h1 id="nomeUsuario">Nome do Usuário</h1>
                <span class="perfil-email" id="emailUsuario">usuario@email.com</span>
            </div>
        </div>

        <div class="perfil-section">
            <div class="section-header">
                <h2>Dados da Conta</h2>
                <button class="btn-perfil btn-primary" id="btnAlterarSenha">Alterar Senha</button>
            </div>
            <div class="info-item">
                <span class="info-label">Nome:</span>
                <span id="infoNome">Nome do Usuário</span>
            </div>
            <div class="info-item">
                <span class="info-label">E-mail:</span>
                <span id="infoEmail">usuario@email.com</span>
            </div>
            <div class="info-item">
                <span class="info-label">Data de Cadastro:</span>
                <span id="infoCadastro">01/01/2024</span>
            </div>
        </div>
    </div>

    <!-- Modal de alteração de senha -->
    <dialog class="modal-senha" id="modalAlterarSenha">
        <h2>Alterar Senha</h2>
        <form id="formAlterarSenha">
            <div class="form-group">
                <label for="senhaAtual">Senha Atual</label>
                <input type="password" id="senhaAtual" required>
            </div>
            <div class="form-group">
                <label for="novaSenha">Nova Senha</label>
                <input type="password" id="novaSenha" required>
            </div>
            <div class="form-group">
                <label for="confirmarSenha">Confirmar Nova Senha</label>
                <input type="password" id="confirmarSenha" required>
            </div>
            <div class="modal-actions">
                <button type="button" class="btn-perfil" id="btnCancelarSenha">Cancelar</button>
                <button type="submit" class="btn-perfil btn-primary">Salvar</button>
            </div>
        </form>
    </dialog>

    <%- include('../partials/footer'); %>
    <script src="/JS/perfil.js"></script>
</body>
</html>